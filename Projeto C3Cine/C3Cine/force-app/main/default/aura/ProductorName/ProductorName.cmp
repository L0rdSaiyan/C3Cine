<aura:component controller="ProductorName" implements="force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global" >
	<aura:attribute name="products" type="String[]" />
   
      <aura:handler name="init" value="{!this}" action="{!c.doInit}" />
 <lightning:card>
    <ul>
        <aura:iteration items="{!v.products}" var="product">
            <li>{!product}</li>
        </aura:iteration>
    </ul>
    </lightning:card>
</aura:component>