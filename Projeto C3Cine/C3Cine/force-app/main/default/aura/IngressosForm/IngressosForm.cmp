<aura:component controller="CreateAssentoController" implements="lightning:actionOverride,force:appHostable,flexipage:availableForAllPageTypes,flexipage:availableForRecordHome,force:hasRecordId,forceCommunity:availableForAllPageTypes,force:lightningQuickAction" access="global">
        <aura:attribute name="fields" type="String[]" default="['Cliente__c','Filme__c','teste_assento__c', 'Funcionario_que_vendeu_o_ingresso__c','Sala__c','Sessao__c']" />
        <aura:attribute name="listOppLineItem" type="List" default="['a1','a2','a3','a4','a5','a6','a7','a8','a9','a10']" />
        <aura:attribute name="listOppLineItem2" type="List" default="['b1','b2','b3','b4','b5','b6','b7','b8','b9','b10']" />
        <aura:attribute name="listOppLineItem3" type="List" default="['c1','c2','c3','c4','c5','c6','c7','c8','c9','c10']" />
        <aura:attribute name="listOppLineItem4" type="List" default="['d1','d2','d3','d4','d5','d6','d7','d8','d9','d10']" />
        <aura:attribute name="listOppLineItem5" type="List" default="['e1','e2','e3','e4','e5','e6','e7','e8','e9','e10']" />
        <aura:attribute name="cadeirasOcupadas" type="List"></aura:attribute>
        <aura:attribute name="assentosCarregados" type="Boolean" default="false"></aura:attribute>
        <aura:attribute name="idCadeiras" type="String"></aura:attribute>
        <aura:attribute name="cadeiraSelecionada" type="String" access="GLOBAL" default="null" ></aura:attribute>
        <aura:attribute name="nomeDaSala" type="String"></aura:attribute>
        <aura:attribute name="valorAssento" type="Decimal" default=""></aura:attribute>
        <lightning:notificationsLibrary aura:id="notifLib"/>
        <aura:attribute name="currentList" type="List" />

        
        <lightning:card title="Criar Ingresso">
            <lightning:recordForm
                aura:id="myRecordForm"
                objectApiName="ingressos__c"
                fields="{!v.fields}"
                columns="2"
                mode="edit"
                onsubmit="{!c.navigate}"
                onsuccess="{!c.criarNovoAssento}"
                oncancel="{!c.cancelForm}" 
                recordId="{!v.recordId}"

            />
            <lightning:button variant="base" label="Visualizar Cadeiras Ocupadas" title="Visualizar Cadeiras Ocupadas" onclick="{!c.validaCadeira}"/>

        </lightning:card>


        <div class="main-container">
            <lightning:card>
                <h1>Escolha seu assento</h1>
                <lightning:layout horizontalAlign="space">


                <aura:if isTrue="{!v.assentosCarregados}">
                    <lightning:spinner alternativeText="Loading" size="medium" />
                </aura:if>

            <aura:iteration items="{!v.listOppLineItem}" var="oppLineItem" indexVar="index">
                <div class="fileira">
                    <lightning:layoutItem padding="around-small">
                        <div aura:id="custom-box" class="custom-box" data-id="{!oppLineItem}" onclick="{!c.setCadeira}" data-index="{!index}" data-list="listOppLineItem">
                            
                            <span class="custom-box-inner">{!oppLineItem}</span>                        </div>
                    </lightning:layoutItem>
                </div>
            </aura:iteration>
        </lightning:layout>

                

            <lightning:layout horizontalAlign="space">
                <aura:iteration items="{!v.listOppLineItem2}" var="oppLineItem" indexVar="index">
                <div class="fileira">
                    <lightning:layoutItem padding="around-small">
                        <div aura:id="custom-box" class="custom-box" data-id="{!oppLineItem}" onclick="{!c.setCadeira}" data-index="{!index}" data-list="listOppLineItem2">
                            <span class="custom-box-inner">{!oppLineItem}</span>                        </div>
                    </lightning:layoutItem>
                </div>
            </aura:iteration>
            </lightning:layout>
            
                


            <lightning:layout horizontalAlign="space">
                <aura:iteration items="{!v.listOppLineItem3}" var="oppLineItem" indexVar="index">
                    <div class="fileira">
                        <lightning:layoutItem padding="around-small">
                            <div aura:id="custom-box" class="custom-box" data-id="{!oppLineItem}" onclick="{!c.setCadeira}" data-index="{!index}" data-list="listOppLineItem3">
                                <span class="custom-box-inner">{!oppLineItem}</span>                            </div>
                        </lightning:layoutItem>
                    </div>
                </aura:iteration>
            </lightning:layout>
            
                

            <lightning:layout horizontalAlign="space">
                <aura:iteration items="{!v.listOppLineItem4}" var="oppLineItem" indexVar="index">
                    <div class="fileira">
                        <lightning:layoutItem padding="around-small">
                            <div aura:id="custom-box" class="custom-box" data-id="{!oppLineItem}" onclick="{!c.setCadeira}" data-index="{!index}" data-list="listOppLineItem4">
                                <span class="custom-box-inner">{!oppLineItem}</span>                            </div>
                        </lightning:layoutItem>
                    </div>
                </aura:iteration>
            </lightning:layout>
            
                

            <lightning:layout horizontalAlign="space">
                <aura:iteration items="{!v.listOppLineItem5}" var="oppLineItem" indexVar="index">
                <div class="fileira">
                    <lightning:layoutItem padding="around-small">
                        <div aura:id="custom-box" class="custom-box" data-id="{!oppLineItem}" onclick="{!c.setCadeira}" data-index="{!index}" data-list="listOppLineItem5">
                            <span class="custom-box-inner">{!oppLineItem}</span>                        </div>
                    </lightning:layoutItem>
                </div>
            </aura:iteration>
            </lightning:layout>
            
            
            <div class="tela" aura:id = "tela">
                TELA
            </div>
            </lightning:card>
        </div>




            
    </aura:component>